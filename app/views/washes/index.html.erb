<p id="notice"><%= notice %></p>

<h1>Listing Washes</h1>

<table>
  <thead>
    <tr>
      <th>Completed by</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @washes.each do |wash| %>
      <tr>
        <td><%= wash.completed_by %></td>
        <td><%= wash.title %></td>
        <td><%= link_to 'Show', wash %></td>
        <td><%= link_to 'Edit', edit_wash_path(wash) %></td>
        <td><%= link_to 'Destroy', wash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

