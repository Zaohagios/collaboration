<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="text-center col-md-4 col-md-offset-4 well">
            <h2>Log In</h2>
            <%= form_for(:session, url: login_path) do |f| %>
                <p>
                    <%= f.label :email %><br />
                    <%= f.email_field :email %>
                </p>
                <p>
                    <%= f.label :password %><br />
                    <%= f.password_field :password %>
                </p>
                <p>
                    <%= f.submit "Login" %>
                </p>
            <% end %>
        </div>
    </div>
</div>
